# compiler flags: -g for debug, -O3 for optimization
CFLAGS=-g -O3 

# default target
all: uimain

# include file dependencies
ui.o: ui.c
	cc -c $^
tokenizer.o: tokenizer.c
	cc -c $^
	
# tokenizer target
uimain: ui.o tokenizer.o
	cc -o $@ $^ $(CFLAGS)

# deletes files generated by compilation
clean:
	rm -f *.o uimain 
